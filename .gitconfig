[core]
  excludesfile = /Users/seongjun/.gitignore_global
  pager = delta
[user]
  email = seongjun@amazon.com
  name = "Seongjun Yun"
[color]
  ui = true
[push]
  default = simple
[alias]
  dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[amazon]
  append-cr-url = true
  pull-request-by-default = true
[diff]
  colorMoved = default
[interactive]
  diffFilter = delta --color-only
[delta]
  native = true
  light = false
  side-by-side = true
  line-numbers = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[magit]
  hideCampaign = true
[init]
  defaultBranch = main
